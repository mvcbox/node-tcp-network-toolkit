{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es5", "es6"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": false,
    "inlineSources": false,
    "allowJs": false,
    "typeRoots": ["node_modules/@types", "types"],
    "plugins": [
      {
        "transform": "typescript-is/lib/transform-inline/transformer",
        "ignoreMethods": true
      }
    ]
  }
}
